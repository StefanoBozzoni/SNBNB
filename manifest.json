{
  "manifest_version": 3,
  "name": "SBNB",
  "version": "1.0",
  "description": "Sisal Branch Name Builder - Chrome Extension",
  "permissions": [
    "activeTab", "scripting", "webNavigation", "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/branch_creator.png"  // Defining a single 128x128 icon
  }
}